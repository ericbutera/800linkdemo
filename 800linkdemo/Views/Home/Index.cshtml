@{
    ViewBag.Title = "Calls List";
}

<div id="call-filters">

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @* for mobile, but not right now
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>*@
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Call List</a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="javascript:void(null);" data-bind="click: toggleSearch">Filter Search</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="panel panel-default" data-bind="visible: showFilters">
        <div class="panel-heading">Call List Filters</div>
        <div class="panel-body">
            @* 
            revisit this after i get currentFilter able to remove the mask in a better way
            , event: { change: searchCallList, blur: searchCallList }
            *@
            <form id="filter-form" class="form-horizontal" data-bind="submit: searchCallList">
                @*<div class="row">
                    <div class="col-sm-12" data-bind="with: errors, text:errors">< /div>
                </div>*@
                <div class="row">
                    <label for="filter-caller-number" class="col-sm-2 control-label">Caller Number</label>
                    <input id="filter-caller-number" type="tel" class="form-control" placeholder="Caller Number" title="Caller Number" data-inputmask="'mask': '(999) 999-9999'" data-bind="textInput: currentFilter().callerNumber"/>
                </div>
                <div class="row">
                    <label for="filter-caller-ext" class="col-sm-2 control-label">Extension</label>
                    <input id="filter-caller-ext" class="form-control" type="number" placeholder="Extension" title="Extension" data-bind="textInput: currentFilter().callerExt"/>
                </div>
                <div class="row">
                    @* 
                    1) possibly add a dropdown to say duration in seconds/minutes/hours 
                    2) possibly add another dropdown that has the options Less Than & Greater Than
                    *@
                    <label for="filter-duration" class="col-sm-2 control-label">Call Duration</label>
                    <input type="number" id="filter-duration" class="form-control" placeholder="Duration in minutes" title="Find call records that have at least this many minutes" data-bind="textInput: currentFilter().callDuration" />
                </div>
                <div class="row">
                    <div class="col-sm-2 control-label"><strong>Call Date Range</strong></div>
                    <label for="filter-date-after" class="col-sm-2 control-label">After</label>
                    <div class="col-sm-3"><input type="date" id="filter-date-after" class="form-control control" title="Find call records after on or after this date" data-bind="value: currentFilter().dateAfter" /></div>

                    <label for="filter-date-before" class="col-sm-2 control-label">Before</label>
                    <div class="col-sm-3"><input type="date" id="filter-date-before" class="form-control control" title="Find call records before on or before this date" data-bind="value: currentFilter().dateBefore" /></div>
                </div>
                <div class="row">
                    <div class="col-sm-offset-10 col-sm-2 text-right">
                        <button type="submit" class="btn btn-xs btn-primary text-right" @* TODO #11 data-bind="disable: isSearchDisabled"*@>Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="calls-list">
    @*
        todo: use a bootstrap grid here instead of these inline styles 
        https://getbootstrap.com/examples/grid/
    *@
    <table id="call-list-grid" class="table table-striped">
    <thead>
        <tr>
            <th class="caller-header">Number</th>
            <th>Duration</th>
            <th>Date Called</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: callsList">
        <tr>
            <td data-bind="text: $data.number"></td>
            <td data-bind="text: $root.formatDuration($data.duration)"></td>
            <td data-bind="text: $root.formatDateTime($data.dateCalled)"></td>
        </tr>
    </tbody>
    </table>
</div>


@Scripts.Render("~/Scripts/Home/Index.js")
@Styles.Render("~/Content/Home/Index.css")

