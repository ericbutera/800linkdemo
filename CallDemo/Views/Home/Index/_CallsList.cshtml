<div id="calls-list">
    <div class="panel panel-default">
        <div class="panel-heading">
            Call List
            <span data-bind="visible: hasCalls, text: ' (' + callsList().length + ' found)'"></span>
            <button type="button" class="btn btn-default btn-sm pull-right text-right glyphicon glyphicon-refresh" data-bind="click: refresh"></button>
        </div>

        <table id="call-list-grid" class="table table-striped table-condensed" data-bind="visible: hasCalls">
        <thead>
            <tr>
                <th class="caller-header">Number</th>
                <th>Duration</th>
                <th>Date Called</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: callsList">
            <tr>
                <td>
                    <a data-bind="attr: { 'tel': '+1' + $root.formatPhone($data.Number) }" class="mouse-pointer"> @* lacks international support for now *@
                        <span data-bind="text: $root.formatPhone($data.Number)"></span>
                        <span data-bind="visible: $data.Extension, text: ' ext. ' + $data.Extension"></span>
                    </a>
                </td>
                <td data-bind="text: $root.formatDuration($data.Duration)"></td>
                <td data-bind="text: $root.formatDateTime($data.DateCalled)"></td>
            </tr>
        </tbody>
        </table>
        <div class="panel-body" data-bind="visible: noCalls"><strong>No calls were found</strong></div>
    </div>
</div>
